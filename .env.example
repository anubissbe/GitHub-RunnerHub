# GitHub-RunnerHub Configuration Template
# Copy this file to .env and update with your values

# === REQUIRED CONFIGURATION ===
# GitHub Configuration - REQUIRED
GITHUB_TOKEN=your_github_token_here
GITHUB_ORG=your-github-organization
GITHUB_WEBHOOK_SECRET=your-webhook-secret-32-chars-min

# === DATABASE CONFIGURATION ===
DB_USER=runnerhub
DB_PASSWORD=runnerhub_secure_2024
DB_NAME=github_runnerhub
DATABASE_URL=postgresql://user:password@host:5432/database

# === REDIS CONFIGURATION ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# === APPLICATION CONFIGURATION ===
NODE_ENV=production
PORT=3000
WEBSOCKET_PORT=3001

# === VAULT CONFIGURATION (Optional) ===
# Uncomment and configure if using HashiCorp Vault
# VAULT_ADDR=http://vault:8200
# VAULT_TOKEN=your_vault_token

# === MONITORING CONFIGURATION ===
GRAFANA_PASSWORD=admin_secure_2024
PROMETHEUS_RETENTION=15d

# === SECURITY CONFIGURATION ===
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your-32-character-encryption-key-here

# === RUNNER CONFIGURATION ===
DEFAULT_RUNNER_IMAGE=ghcr.io/actions/actions-runner:latest
RUNNER_CONCURRENCY=5
RUNNER_TIMEOUT=3600
RUNNER_LABELS=self-hosted-proxy-ubuntu,self-hosted-proxy

# === NETWORK CONFIGURATION ===
NETWORK_NAME=runnerhub-network
CONTAINER_NETWORK_PREFIX=runnerhub-job-

# === MONITORING CONFIGURATION ===
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# === LOGGING CONFIGURATION ===
LOG_LEVEL=info
LOG_FILE_PATH=./logs/runnerhub.log
AUDIT_LOG_ENABLED=true

# === DOCKER CONFIGURATION ===
DOCKER_HOST=tcp://docker-proxy:2375
DOCKER_REGISTRY=ghcr.io
DOCKER_NAMESPACE=your-organization

# === SCALING CONFIGURATION ===
AUTO_SCALING_ENABLED=true
MIN_RUNNERS=1
MAX_RUNNERS=10
SCALE_UP_THRESHOLD=0.8
SCALE_DOWN_THRESHOLD=0.2

# === WEBHOOK CONFIGURATION ===
WEBHOOK_PATH=/webhook
WEBHOOK_PORT=3000
WEBHOOK_TIMEOUT=30

# === CLEANUP CONFIGURATION ===
CLEANUP_ENABLED=true
CLEANUP_INTERVAL=300
IDLE_TIMEOUT=1800
MAX_JOB_RUNTIME=7200

# === SECURITY SCANNING CONFIGURATION ===
SECURITY_SCANNING_ENABLED=true
TRIVY_TIMEOUT=300
VULNERABILITY_THRESHOLD=HIGH

# === NETWORK ISOLATION CONFIGURATION ===
NETWORK_ISOLATION_ENABLED=true
ISOLATION_MODE=repository

# === DEVELOPMENT/DEBUG CONFIGURATION ===
DEBUG=false
VERBOSE_LOGGING=false
DEVELOPMENT_MODE=false