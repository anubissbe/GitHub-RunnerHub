# Application
NODE_ENV=development
PORT=3000

# GitHub
GITHUB_TOKEN=your_github_token_here
GITHUB_ORG=your_github_org
GITHUB_RUNNER_VERSION=2.311.0

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# PostgreSQL Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/github_runnerhub
DB_HOST=localhost
DB_PORT=5432
DB_NAME=github_runnerhub
DB_USER=app_user
DB_PASSWORD=change_me_in_production

# Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your_vault_token_here

# Docker Configuration
DOCKER_HOST=/var/run/docker.sock
DOCKER_SOCKET_PROXY=http://docker-proxy:2375

# Runner Configuration
RUNNER_POOL_MIN=1
RUNNER_POOL_MAX=10
RUNNER_SCALE_INCREMENT=5
RUNNER_SCALE_THRESHOLD=0.8
RUNNER_IDLE_TIMEOUT=300
RUNNER_NETWORK_PREFIX=runner-net

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs

# Security Scanning Configuration
SECURITY_SCAN_IMAGES=true
SECURITY_BLOCK_ON_VULNERABILITIES=true
SECURITY_BLOCK_ON_SCAN_FAILURE=true
SECURITY_DEFAULT_POLICY_ID=
TRIVY_VERSION=latest
SECURITY_SCAN_TIMEOUT=300000
SECURITY_MAX_CRITICAL=0
SECURITY_MAX_HIGH=5