# GitHub API Configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_ORG=your_github_organization
GITHUB_REPO=your_github_repository

# Auto-scaler Configuration
MIN_RUNNERS=5
MAX_RUNNERS=50
SCALE_THRESHOLD=0.8
SCALE_INCREMENT=5
COOLDOWN_PERIOD=300
IDLE_TIMEOUT=1800

# Backend Configuration
PORT=8300

# Frontend Configuration (create .env file in frontend directory)
VITE_API_URL=http://localhost:8300
VITE_WS_URL=ws://localhost:8300/ws

# Docker Configuration
COMPOSE_PROJECT_NAME=github-runnerhub

# Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRY=24h
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password-in-production

# Environment
NODE_ENV=development