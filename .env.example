# GitHub Configuration
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx  # Personal Access Token with repo, workflow, admin:org scopes
GITHUB_ORG=your-organization                            # Your GitHub organization or username

# Runner Configuration  
RUNNER_LABELS=self-hosted,docker,runnerhub              # Labels for runners
MAX_RUNNERS_PER_REPO=4                                  # 1 dedicated + 3 dynamic per repository
IDLE_TIMEOUT_MINUTES=5                                  # Minutes before idle dynamic runners are removed

# Advanced Configuration (Optional)
HEALTH_CHECK_INTERVAL=60000                             # Health check interval in milliseconds
SCALE_CHECK_INTERVAL=30000                              # Auto-scaling check interval in milliseconds
RECOVERY_ATTEMPTS=3                                     # Number of recovery attempts for failed runners
CONTAINER_RESTART_TIMEOUT=300000                        # Container restart timeout in milliseconds

# API Configuration
PORT=8300                                               # Backend API port
UI_PORT=8080                                            # Frontend dashboard port
NODE_ENV=production                                     # Node environment

# Docker Configuration
DOCKER_NETWORK=github-runnerhub_runnerhub              # Docker network name
RUNNER_IMAGE=myoung34/github-runner:latest              # Runner Docker image
